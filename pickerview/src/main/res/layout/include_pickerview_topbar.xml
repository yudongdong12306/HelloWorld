<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:raiing="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picker_ba"
    android:gravity="center_vertical">

    <com.bigkoo.pickerview.view.SwitchButton
        android:id="@+id/topbar_switch_btn"
        android:layout_width="@dimen/pickerview_switch_width"
        android:layout_height="@dimen/pickerview_switch_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pickerview_topbar_paddingright"
        raiing:switch_left_text="@string/height_cm"
        raiing:switch_right_text="@string/height_in" />


    <TextView
        android:id="@+id/topbar_title_tv"
        style="@style/f3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/topbar_cancel_btn"
        android:layout_width="@dimen/confirm_button"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/h1"
        android:layout_toLeftOf="@+id/topbar_confirm_btn"
        android:src="@drawable/public_button_not" />

    <ImageView
        android:id="@+id/topbar_confirm_btn"
        android:layout_width="@dimen/confirm_button"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/h1"
        android:src="@drawable/public_button_right" />
</RelativeLayout>
