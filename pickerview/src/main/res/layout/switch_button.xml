<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picker_ba"
    android:orientation="horizontal"
    android:padding="@dimen/pickerview_border">

    <TextView
        android:id="@+id/switch_left_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_left_tv"
        android:gravity="center" />

    <TextView
        android:id="@+id/switch_right_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_right_tv"
        android:gravity="center" />
</LinearLayout>