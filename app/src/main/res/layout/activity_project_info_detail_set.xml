<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_5dp">

    <include layout="@layout/common_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_400" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/size_10dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/project_name"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/project_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/construction_organization"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/construction_organization_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_5dp"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filler_type"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/filler_type_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instrument_number"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/instrument_number_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detect_person"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/detect_person_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <Button
        android:id="@+id/newly_build_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@drawable/shape_bottom_corners"
        android:text="@string/confirm"
        android:textColor="@color/md_gray_300"
        android:textSize="@dimen/size_16sp" />


