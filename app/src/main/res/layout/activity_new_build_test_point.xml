<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_5dp">

    <include layout="@layout/common_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_400" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/size_25dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_info"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/project_info_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/build_serial_num"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/build_serial_num_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_5dp"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coordinate_info"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/coordinate_info_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detect_time"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:editable="false"
            android:id="@+id/detect_time_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detect_person"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/detect_person_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/test_point_pic_iv"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_5dp"
        android:scaleType="centerCrop"
        android:contentDescription="照片信息" />
    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20dp"
        android:paddingEnd="@dimen/size_15dp"
        android:paddingStart="@dimen/size_15dp">

        <Button
            android:id="@+id/take_photo_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_50dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bottom_corners"
            android:text="@string/take_photo"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />

        <Button
            android:id="@+id/confirm_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_bottom_corners"
            android:text="@string/start_detect"
            android:textColor="@color/md_gray_300"
            android:textSize="@dimen/size_16sp" />

    </LinearLayout>

