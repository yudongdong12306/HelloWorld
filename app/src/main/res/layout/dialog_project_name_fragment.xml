<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_title_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bottom_corners"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/project_name_custom_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="点击自定义..."
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textSize="@dimen/size_18sp" />

        <Button
            android:id="@+id/project_name_custom_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_corners"
            android:text="@string/confirm"
            android:textSize="@dimen/size_15dp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888" />
    <!--<TextView-->
    <!--android:background="@color/md_blue_700"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:gravity="center"-->
    <!--android:text="@string/about_us" />-->

    <ListView
        android:id="@+id/project_name_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>